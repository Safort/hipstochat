{
  "name": "hipsto-chat",
  "version": "0.0.1",
  "description": "HipstoChat",
  "main": "index.js",
  "author": "Safort",
  "license": "ISC",
  "scripts": {
    "start": "babel-node ./app/index.js",
    "build": "npm run build-back && npm run build-front",
    "watch-front": "webpack-dev-server --mode development -w --progress",
    "build-front": "webpack-cli --mode=production",
    "watch-back": "babel ./src --out-dir app --ignore 'src/**/client' --no-babelrc --presets=@babel/preset-env,@babel/typescript,@babel/react --extensions '.js,.ts,.tsx' --watch",
    "build-back": "babel ./src --out-dir app --ignore 'src/**/client' --no-babelrc --presets=@babel/preset-env,@babel/typescript,@babel/react --extensions '.js,.ts,.tsx'",
    "lint": "npm run lint-js && npm run lint-css",
    "lint-js": "eslint ./src",
    "lint-css": "stylelint \"./src/frontend/js/**/*.css\"",
    "prettier": "prettier --write 'src/**/*.{js,jsx,ts,tsx}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/node": "^7.2.2",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-async-to-generator": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@babel/register": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "bcrypt": "^3.0.3",
    "css-loader": "^2.1.0",
    "eslint": "^5.11.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.12.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "history": "^4.7.2",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^1.3.1",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.0",
    "react-hot-loader": "^4.6.3",
    "redux": "^4.0.1",
    "style-loader": "^0.23.1",
    "stylelint-config-standard": "^18.2.0",
    "webpack": "^4.28.3",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.14"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "cookie-parser": "^1.4.3",
    "koa": "^2.6.2",
    "koa-body": "^4.0.6",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "pg": "^7.7.1",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "react-redux": "^6.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "redux-thunk": "^2.3.0",
    "ws": "^6.1.2"
  }
}
